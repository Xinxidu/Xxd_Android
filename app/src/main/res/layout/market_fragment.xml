<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/market_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabBackground="@color/not_enough_business_consumer_"
        app:tabIndicatorColor="@color/flight_title_orange"
        app:tabSelectedTextColor="@color/flight_title_orange"
        app:tabTextColor="@color/black"
        app:tabMode="scrollable"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/market_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>