<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/textView"
            android:background="@drawable/frame"
            android:dropDownVerticalOffset="51dp" />

        <Button
            android:id="@+id/bt_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/textView"
            android:background="@drawable/frame"
            android:text="白银升贴水1000"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/spinner1"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/textView1"
            android:text="档位"
            android:textColor="@color/wait_result_gray" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignTop="@+id/tv_price"
            android:text="卖1"
            android:textColor="@color/wait_result_gray" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:text="价格"
            android:textColor="@color/wait_result_gray" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_num"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/tv_num"
            android:layout_toStartOf="@+id/tv_num"
            android:text="1006.0"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginRight="20dp"
            android:text="数量"
            android:textColor="@color/wait_result_gray" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView3"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="113"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignParentBottom="true"
            android:background="@color/dan_back" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/bt_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/round_login"
                    android:text="按汇总" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/bt_collect"
                    android:layout_toRightOf="@+id/bt_collect"
                    android:background="@drawable/hui"
                    android:text="按明细"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/tv_price_sell"
                    android:text="买1"
                    android:textColor="@color/wait_result_gray" />

                <TextView
                    android:id="@+id/tv_price_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/tv_num_sell"
                    android:text="1005.0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_num_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:text="220"
                    android:textColor="@color/black" />


                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/textView4"
                    android:layout_toStartOf="@+id/textView4"
                    android:background="@drawable/frame1">

                    <TextView
                        android:id="@+id/bt_jian"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/yuan"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_num"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/bt_jia"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/yuan"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="40dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/relative1"
                    android:layout_alignLeft="@+id/relative1"
                    android:layout_alignRight="@+id/relative1"
                    android:layout_alignStart="@+id/relative1"
                    android:layout_below="@+id/relative1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/frame1">

                    <TextView
                        android:id="@+id/bt_jian1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/yuan"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/bt_jia1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/yuan"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_tv_trade_puy_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignEnd="@+id/relativeLayout"
                    android:layout_alignLeft="@+id/relativeLayout"
                    android:layout_alignRight="@+id/relativeLayout"
                    android:layout_alignStart="@+id/relativeLayout"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_commit"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/base_trade_foot" />

</LinearLayout>