<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_bg"
    android:orientation="vertical">

    <com.xinxidu.xxd.utils.SelectableRoundedImageView
        android:id="@+id/iv_news_image"
        android:layout_width="93dp"
        android:layout_height="53dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/aaa"
        app:sriv_left_bottom_corner_radius="7dp"
        app:sriv_left_top_corner_radius="7dp"
        app:sriv_right_bottom_corner_radius="7dp"
        app:sriv_right_top_corner_radius="7dp"/>

    <TextView
        android:id="@+id/tv_news_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_news_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/iv_news_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="黃金以及美劵跌破下三角支撑黃金以及美劵跌破下三角支撑黃金以及美劵跌破下三角支撑"
        android:textColor="@color/font_gray"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016/9/5/16:12"
        android:textSize="11dp"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/tv_news_test"
        android:layout_alignLeft="@+id/tv_news_test"
        android:layout_marginTop="9dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/hui_dan" />


</RelativeLayout>