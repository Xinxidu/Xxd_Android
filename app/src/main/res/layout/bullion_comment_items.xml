<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/ripple_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_news_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:background="@drawable/aaa" />

    <TextView
        android:id="@+id/tv_news_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_news_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/iv_news_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="黃金以及美劵跌破下三角支撑黃金以及美劵跌破下三角支撑黃金以及美劵跌破下三角支撑"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_news_image"
        android:layout_alignEnd="@+id/tv_news_test"
        android:layout_alignRight="@+id/tv_news_test"
        android:text="2016/9/5/16:12"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dan_back" />


</RelativeLayout>