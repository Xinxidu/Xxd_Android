<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xinxidu.xxd.fragments.AboutXXiDuActivityFragment"
    tools:showIn="@layout/activity_about_xxi_du"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/title" />

    <android.support.design.widget.TabLayout
        android:id="@+id/trade_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabBackground="@color/not_enough_business_consumer_"
        app:tabIndicatorColor="@color/getauthcodebutton"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/getauthcodebutton"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
        app:tabTextColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dan_back" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tarde_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
