<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
   <include layout="@layout/title"
       android:id="@+id/includeam"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/between_line" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:background="@color/white"
       android:layout_below="@+id/includeam">
    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@mipmap/menu_3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
     <TextView
         android:id="@+id/tv_title1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/iv_message"
         android:layout_marginTop="5dp"
         android:text="教你如何炒股"
         android:textSize="20sp"
         android:textColor="@color/black"/>
       <TextView
           android:id="@+id/tv_date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="8月21日"
           android:textColor="@color/myself_blue"
           android:layout_alignRight="@+id/button2"
           android:layout_marginTop="5dp"/>
       <TextView
           android:id="@+id/tv_title2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="名师推荐:西都金融研究院"
           android:textColor="@color/black"
           android:layout_alignParentBottom="true"
           android:layout_toRightOf="@+id/iv_message"
           android:layout_marginBottom="5dp"/>
       <Button
           android:layout_width="50dp"
           android:layout_height="20dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:layout_alignParentBottom="true"
           android:background="@color/orange"
           android:text="活动中"
           android:id="@+id/button2"
           android:layout_marginBottom="5dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:background="@color/between_line" />
   </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black" />
</RelativeLayout>
