<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.BroadcastNewsFragment"
    tools:showIn="@layout/activity_broadcast_news">

    <include layout="@layout/title"
        android:id="@+id/include"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/btoadcast_news_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabBackground="@color/not_enough_business_consumer_"
        app:tabIndicatorColor="@color/back_title"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/back_title"
        android:layout_below="@+id/include"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/btoadcast_news_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btoadcast_news_tabs"/>

</RelativeLayout>
