<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/info">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:background="@color/book_tab_nor_text1" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_icon"
                android:text="韩云老师"
                android:textSize="15dp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:background="@color/book_tab_nor_text1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_touxian"
            android:text="头衔"
            android:textColor="@color/black2"
            android:textSize="13dp" />

        <View
            android:id="@+id/view5"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@color/book_tab_nor_text1" />

        <TextView
            android:id="@+id/tv_touxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/view5"
            android:text="头衔11111"
            android:textColor="@color/black2"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:background="@color/book_tab_nor_text1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <View
            android:id="@+id/view6"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@color/book_tab_nor_text1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_tiem"
            android:text="从业时间"
            android:textColor="@color/black2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view6"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="20年"
            android:textColor="@color/black2"

            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:background="@color/book_tab_nor_text1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@color/book_tab_nor_text1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_shanchang"
            android:text="擅长"
            android:textColor="@color/black2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_shanchang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="shanca11111"
            android:textColor="@color/black2"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:background="@color/book_tab_nor_text1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@color/book_tab_nor_text1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="简介"
            android:textColor="@color/black2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="jianjie"
            android:textColor="@color/black2"
            android:textSize="13dp" />
    </RelativeLayout>
</LinearLayout>