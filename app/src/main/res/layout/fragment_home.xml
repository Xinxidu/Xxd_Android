<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/inc"
        layout="@layout/title" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_below="@+id/inc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragment_cycle_viewpager_content"
                android:name="com.xinxidu.xxd.viewpager.lib.CycleViewPager"
                android:layout_width="match_parent"
                android:layout_height="110dp" />

            <include layout="@layout/home_fragment1" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabBackground="@color/not_enough_business_consumer_"
                app:tabIndicatorColor="@color/getauthcodebutton"
                app:tabSelectedTextColor="@color/getauthcodebutton"
                app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
                app:tabTextColor="@color/black" />

            <android.support.v4.view.ViewPager
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
