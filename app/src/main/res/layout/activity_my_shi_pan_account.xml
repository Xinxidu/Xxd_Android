<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/hui_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rl_accountdetail"
            style="@style/MyTextView"
            android:text="账户信息" />

        <View style="@style/MyView" />

        <TextView
            android:id="@+id/rl_todaydinglidan"
            style="@style/MyTextView"
            android:text="当日订立单" />

        <View style="@style/MyView" />

        <TextView
            android:id="@+id/rl_todaytiaoqidan"
            style="@style/MyTextView"
            android:text="当日调期单"
            android:textColor="@color/black" />

        <View style="@style/MyView" />

        <TextView
            android:id="@+id/rl_historydinglidan"
            style="@style/MyTextView"
            android:text="历史订立单" />

        <View style="@style/MyView" />

        <TextView
            android:id="@+id/rl_historytiaoqidan"
            style="@style/MyTextView"
            android:text="历史调期单" />

        <View style="@style/MyView" />

        <TextView
            android:id="@+id/rl_jiaoyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_bg"
            android:drawableRight="@drawable/right"
            android:padding="16dp"
            android:text="交易"
            android:textColor="@color/shortlease_main_text_blue"
            android:textSize="18dp" />

        <View style="@style/MyView" />

        <Button
            android:id="@+id/bt_sign_out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_commit"
            android:gravity="center"
            android:text="退出账户"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>